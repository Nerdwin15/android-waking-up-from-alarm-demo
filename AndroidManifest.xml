<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nerdwin15.demo.alarmdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- This activity is launched when the app is launched -->
        <activity android:name="com.nerdwin15.demo.alarmdemo.AlarmMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- This activity is the activity that will be launched by the alarm -->
        <activity android:name="com.nerdwin15.demo.alarmdemo.AlarmReceiverActivity" />
        
    </application>

</manifest>